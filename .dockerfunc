alias d="docker"
alias dm="docker-machine"

# Deletes all images and all containers.
function dclean() {
    ddel
    d rmi -f $(d images -q) > /dev/null 2>&1
}

# Stops and deletes containers
function ddel() {
   d stop $(d ps -a -q) > /dev/null 2>&1
   d rm $(d ps -a -q) > /dev/null 2>&1
}

# Executes bash inside of the container
function bashin() {
   d exec -it $@ /bin/bash
}

function dlogs() {
   d logs $@
}

# ** docker-machine **

# Inits default docker host.
function dinit() {
    _initDockerMachine "default"
}

# Starts docker machine and sets env settings.
function _initDockerMachine() {
    dm start $@ > /dev/null 2>&1
    eval $(dm env $@)
}